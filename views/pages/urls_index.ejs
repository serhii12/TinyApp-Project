<!DOCTYPE html>
<html>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <% include ../partials/_head %>
<body>
  <% include ../partials/_nav %>
  <div class="wrapp">
    <h1>Welcome to Dashboard</h1>
    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th scope="col">ShortURL</th>
            <th scope="col">LongURL</th>
            <th scope="col">Delete</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <%urls.forEach( link  => { %>
        <tbody>
          <tr>
            <form method="POST" action="/urls/<%= link.shortUrl %>/delete?_method=DELETE" style="display:inline;">
              <td data-label="ShortURL">
                <a href="<%= link.longUrl %>">/u/<%= link.shortUrl %></a>
              </td>
              <td data-label="LongURL">
                <a href="<%= link.longUrl %>"> <%= link.longUrl %></a>
              </td>
              <td data-label="Delete">
                <button class="btn btn-table" type="submit">Delete</button>
              </td>
              <td data-label="Edit">
                <a href="/urls/<%= link.shortUrl %>" class="btn btn-table"> Edit </a>
              </td>
            </form>
            <%}) %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>